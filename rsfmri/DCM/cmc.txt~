cos8 -> Procedural
cos8 -> WM

# Intrinsic connectivity

Perception -> Action
Action     -> Perception

LTM -> WM
WM -> LTM

Perception -> WM
WM -> Perception

WM -> Action
WM -> Procedural

# Procedural control

Procedural -> WM
