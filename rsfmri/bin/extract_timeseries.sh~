#!/bin/bash

AFNI_DIR=/home/stocco/abin

for subj in `ls -d sub-*`; do
    cd ${subj}/func
    for mask in `ls ../../ROIs/*.nii`; do
	roi_name=`echo $mask | cut -f4 -d/`
	roi_name=`echo $roi_name | cut -f1 -d.`
	$AFNI_DIR/3dmaskdump -mask $mask          \
			     -o ${roi_name}.txt   \
			     -noijk               \
			     swa${subj}_task-rest_bold.nii 
    done
    cd ../..
done
